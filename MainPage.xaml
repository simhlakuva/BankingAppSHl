<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingAppSH.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Banking App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="EnterDepositAmount" Text="Enter Amount"/>
        <Entry x:Name="EnterDepositDescription" Text="Enter Description"/>
        <Button x:Name="DepositMoneyButton" Text="Deposit Money"/>
        <Entry x:Name="EnterAmount" Text="Enter Amount"/>
        <Entry x:Name="EnterDescription" Text="Enter Description"/>
        <Button x:Name="TransactionHistoryButton" Text="View Transaction History" Clicked="THistoryButton_Clicked"/>


    </StackLayout>

</ContentPage>
